<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @customer.name %>
</p>

<p>
  <b>Table no:</b>
  <%= @customer.table_no %>
</p>


<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>


<%= form_for [@customer, @order] do |form| %>
<div class="field">
  <%= form.label :order %><br />
  <%= form.text_field :order %>
</div>

<div class="actions">
    <%= form.submit "Submit" %>
</div>
<% end %>

<% @orders.each do |order| %>
	<p>
		<span> <%= order.created_at %> </span>
	</p>
	<p>
		<span><b> Orders: </b></span>
		<%= order.order %>
	</p>

<% end %>